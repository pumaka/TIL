vector<int> people;
vector<int> combination;

for (int i = 0; i < n; ++i) { people.push_back(i+1); }
go(0, k);

void go(int offset, int k) {
  if (k == 0) {
    return combination;
  }
  for (int i = offset; i <= people.size() - k; ++i) {
    combination.push_back(people[i]);
    go(i+1, k-1);
    combination.pop_back();
  }
}
